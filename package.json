{
  "name": "hapipal.com",
  "version": "1.0.0",
  "description": "Site for hapi pal",
  "author": "Devin Ivy <devin@bigroomstudios.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "start": "node server",
    "test": "lab -a code -L",
    "lint": "eslint .",
    "prebuild:css": "node-sass lib/public/css/main.scss lib/public/css/main.build.css --source-map true",
    "build:css": "postcss lib/public/css/main.build.css -o lib/public/css/main.build.min.css --use cssnano --no-map",
    "prebuild:js": "browserify lib/public/js/main.js -o lib/public/js/main.build.js -d -t [ babelify --presets [ es2015-node ] ]",
    "build:js": "uglifyjs lib/public/js/main.build.js -o lib/public/js/main.build.min.js",
    "build": "npm run build:css && npm run build:js"
  },
  "dependencies": {
    "boom": "5.x.x",
    "handlebars": "4.x.x",
    "haute-couture": ">=2.1.0 <3",
    "inert": "4.x.x",
    "joi": "10.x.x",
    "require-dir": "0.3.x",
    "semver": "5.x.x",
    "vision": "4.x.x",
    "wreck": ">=12.3.0 <13"
  },
  "devDependencies": {
    "babel-preset-es2015-node": "6.x.x",
    "babelify": "7.x.x",
    "browser-sync": "2.x.x",
    "browserify": "14.x.x",
    "confidence": "3.x.x",
    "cssnano": "3.x.x",
    "dotenv": "4.x.x",
    "eslint": "4.x.x",
    "eslint-config-hapi": "10.x.x",
    "eslint-plugin-hapi": "4.x.x",
    "glue": "4.x.x",
    "hapi": "16.x.x",
    "hoek": "4.x.x",
    "lab": "14.x.x",
    "labbable": "2.x.x",
    "node-sass": "4.x.x",
    "postcss": "6.x.x",
    "postcss-cli": "4.x.x"
  }
}
