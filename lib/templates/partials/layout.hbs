<!doctype html>
<html lang="en">
    <head>

        {{#if (and options.gaTrackingId (not options.developmentMode))}}
            <!-- Global site tag (gtag.js) - Google Analytics -->
            <script async src="https://www.googletagmanager.com/gtag/js?id={{options.gaTrackingId}}"></script>
            <script>
              window.dataLayer = window.dataLayer || [];
              function gtag(){dataLayer.push(arguments);}
              gtag('js', new Date());
              gtag('config', '{{options.gaTrackingId}}');
            </script>
        {{/if}}

        {{#if title}}
            <title>hapi pal - {{title}}</title>
        {{else}}
            <title>hapi pal</title>
        {{/if}}

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="The home of hapi pal: an ecosystem of tools and best practices for the working hapijs developer">

        <link rel="icon" type="image/x-icon" href="{{baseURI}}/public/img/favicon.ico">

        {{#if options.developmentMode}}
            <link rel="stylesheet" href="{{baseURI}}/public/css/main.build.css">
        {{else}}
            <link rel="stylesheet" href="{{baseURI}}/public/css/main.build.min.css">
        {{/if}}

        {{#> head-block}}
            {{!-- Custom <head> content per page could be added. --}}
        {{/head-block}}
    </head>

        {{#if template}}
            <body class="{{template}}-page">
        {{else}}
            <body>
        {{/if}}

        {{> navigation}}

        {{#> content}}
            {{!-- Content goes here. --}}
        {{/content}}

        {{> footer}}

        {{#if options.developmentMode}}
            <script src="{{baseURI}}/public/js/main.build.js"></script>
        {{else}}
            <script src="{{baseURI}}/public/js/main.build.min.js"></script>
        {{/if}}

        {{#> scripts-block}}
            {{!-- Custom scripts per page can be added. --}}
        {{/scripts-block}}
    </body>
</html>
