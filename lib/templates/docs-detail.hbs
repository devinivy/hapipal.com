{{#> layout title="Docs Detail" }}

    {{#*inline "content"}}
        <div class="main docs-detail l-navigablecontent">
          <nav class="docs-nav l-navigablecontent__nav">
            <div class="select-version">
              <p>Reference Version: </p>
              <select id="version" class="version">
                {{#each versions as |ver|}}
                <option value="{{ver}}"{{#equals ver ../version}} selected="selected"{{/equals}}>v{{ver}}</option>
                {{/each}}
              </select>
            </div>
            <div class="nav-target"><!-- replaced with nav by js/docs-nav.js --></div>
            <ul class="package-list">
                {{#each packages as |package|}}
                    <li>
                      <a href="/docs/{{package.name}}">
                        <img {{#equals package.name ../pkg.name}}class="active"{{/equals}} src="/public/img/hapi-bolt{{#equals package.name ../pkg.name}}-gold{{/equals}}.svg" />
                        {{package.name}}
                      </a>
                    </li>
                {{/each}}
            </ul>
          </nav>
          <div class="l-navigablecontent__mobile-controls">
            <button class="l-navigablecontent__control-item l-navigablecontent__control-item--left">
                <img src="/public/img/menu-icon.svg" />
            </button>
            <button class="l-navigablecontent__control-item l-navigablecontent__control-item--right">
                <img src="/public/img/arrow-up.svg" />
            </button>
          </div>
          <div class="wrapper">
              {{{html}}}
          </div>
        </div>
    {{/inline}}

{{/layout}}
