{{#> layout title="Best Practices" }}

    {{#*inline "content"}}
        <div class="main best-practices-list">
            <div class="wrapper">
                <ul>
                    {{#each bestPractices}}
                        <li>
                            <a href="/best-practices/{{this.slug}}">{{this.title}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    {{/inline}}

{{/layout}}
